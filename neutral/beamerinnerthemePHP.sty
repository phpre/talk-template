% Frame title: PHP

\defbeamertemplate*{frametitle}{PHP}[1]{%
    \vskip-.5ex%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2ex,dp=1ex]{frametitle}
        {\centering \usebeamerfont{frametitle}\insertframetitle\par}
    \end{beamercolorbox}
}

